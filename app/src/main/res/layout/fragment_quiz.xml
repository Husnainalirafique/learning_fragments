<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".trivia.fragments.QuizFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Which language is not used in android studio"
            android:textColor="@color/initial"
            android:textSize="30sp" />

        <RadioGroup
            android:id="@+id/question1RadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <RadioButton
                android:id="@+id/question1Option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c++"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/question1Option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/question1Option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kotlin"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/question1Option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XML"
                android:textSize="20sp" />

        </RadioGroup>

        <!-- Repeat the above layout for each question -->

        <Button
            android:id="@+id/trivia_quiz_submitButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/initial"
            android:fontFamily="@font/roboto_mono"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>
</layout>